{{! The big featured header }}
<header class="{{#if @blog.cover}}has-cover{{else}}no-cover{{/if}}" {{#if @blog.cover}}style="background-image: url({{@blog.cover}});"{{/if}}>
    {{>header}}
    <h1>{{@blog.title}}</h1>
    <h2>{{@blog.description}}</h2>
</header>

