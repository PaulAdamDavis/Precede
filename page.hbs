{{!< default}}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}

    <header class="{{#if image}}has-cover{{else}}no-cover{{/if}}" {{#if image}}style="background-image: url({{image}});"{{/if}}>
        {{>header}}
    </header>

    <main role="main">
        <article class="{{post_class}}">

            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>
            </header>

            <section class="post-content">
                {{content}}
            </section>

        </article>
    </main>

{{/post}}
